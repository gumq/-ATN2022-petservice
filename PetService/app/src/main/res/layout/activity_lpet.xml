<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.LpetActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/slider" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/imgbtnCho"
                                    android:layout_width="87dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/dog"
                                    android:src="@drawable/device_presentation_button_border"
                                    android:backgroundTint="@color/gradient_start_color"
                                  />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="4dp"
                                    android:fontFamily="serif"
                                    android:text="DOG"
                                    android:textSize="18dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"

                        android:layout_marginLeft="7dp"
                        app:cardElevation="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/imgbtnMeo"
                                    android:layout_width="87dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/cat"
                                    android:backgroundTint="@color/gradient_start_color"
                                    android:src="@drawable/device_presentation_button_border" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="serif"
                                    android:paddingBottom="4dp"
                                    android:text="CAT"
                                    android:textSize="18dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_marginLeft="8.5dp"
                        app:cardElevation="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/imgbtnThucAn"
                                    android:layout_width="87dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/bjrd"
                                    android:backgroundTint="@color/gradient_start_color"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/device_presentation_button_border" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="serif"
                                    android:paddingBottom="4dp"
                                    android:text="BIRD"
                                    android:textSize="18dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/imgbtnback"
                                    android:layout_width="87dp"
                                    android:layout_height="90dp"
                                    android:background="@drawable/backleft"
                                    android:backgroundTint="@color/gradient_start_color"
                                    android:src="@drawable/device_presentation_button_border"></ImageButton>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="serif"
                                    android:paddingBottom="4dp"
                                    android:text="BACK"
                                    android:textSize="18dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </RelativeLayout>


            <ListView
                android:id="@+id/listviewhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp">
            </ListView>
<!--            <ImageView-->
<!--                android:background="@drawable/bgchamsoc"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"/>-->
        </LinearLayout>





</RelativeLayout>