<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="application.justpets.dal.myapplication.Helper.AboutUs">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/header_cover_image"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/side_nav_bar"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/UserEmailID"
            android:layout_width="339dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="About Us"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/timeselector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.935"
            tools:layout_editor_absoluteX="29dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="396dp"
        android:layout_height="326dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:background="#fff"
        android:elevation="7dp"
        android:padding="20dp"
        android:text="Just Pets makes you feel at home by creating a homely atmosphere for your pets even when your pets are outside. We love to see you here as much as your pet loves to see you back home. Visit us to pamper your pets. Enjoy your day at work while we play around with the most lovable members of your family. You decide when our specialists get to take care of your affectionate ones. Give them the home and family when you are busy elsewhere. Leave everything to us. Enjoy top quality products and services for our special customers 7 days a week, 24 hours a day.\n\nEnjoy being a part of our family."
        android:textSize="16sp" />


</LinearLayout>
