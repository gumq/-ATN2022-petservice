<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"

    tools:context=".Activitys.PetDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#f0f6fe"
        android:background="@drawable/custom_button"
        app:cardElevation="25dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <ImageView
                android:background="@drawable/custom_button"
                android:scaleType="fitXY"
                android:backgroundTint="@color/gradient_end_color"
                android:id="@+id/img_hinh_detail"
                android:layout_width="331dp"
                android:layout_height="240dp"
                android:src="@drawable/alaska_detail"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chó Alaska"
                        android:textSize="24dp"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/tv_gia_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.000.000đ"
                        android:textSize="18dp"
                        android:textColor="#FF4343"/>
                </LinearLayout>
                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="90dp"
                    android:progressTint="#ffde30"

                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="2"
                    android:scaleY="2" />

            </LinearLayout>

            <TextView
                android:fontFamily="@font/segoe_ui_bold_italic"
                android:id="@+id/tv_chitiet_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Chó Alaska đang là loại chó được ưa chuộng nhất tại Việt Nam hiện nay. Với ngoại hình oai vệ, bộ lông tuyệt đẹp, rất tình cảm và thân thiện. Chó Alaska dễ dàng “đốn tim” bạn ngay từ lần đầu gặp gỡ."
                android:textSize="14dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backbutoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            app:srcCompat="?attr/homeAsUpIndicator" />
    </androidx.cardview.widget.CardView>



</ScrollView>